  "version": "0.2.0",
  "configurations": [
    {
      "name": "development",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_development.dart",
      "args": [ "--flavor", "development", "--target", "lib/main_development.dart" ]
    },
    {
      "name": "sit",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_sit.dart",
      "args": ["--flavor", "sit", "--target", "lib/main_sit.dart"]
    },
    {
      "name": "uat",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_uat.dart",
      "args": ["--flavor", "uat", "--target", "lib/main_uat.dart"]
    },
    {
      "name": "production",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_production.dart",
      "args": ["--flavor", "production", "--target", "lib/main_production.dart"]
    },
    {
      "name": "Generate goldens",
      "request": "launch",
      "type": "dart",
      "codeLens": {
        "for": ["run-test", "run-test-file"]
      },
      "args": ["--update-goldens"]
    },
    {
      "name": "Run all tests",
      "request": "launch",
      "type": "dart",
      "program": "./test/"
    }
  ]
}
