<idea-plugin>
    <id>com.primeholding.rxbloc_generator_plugin</id>
    <name>RxBloc</name>
    <vendor>Prime Holding JSC</vendor>

    <description>
        <![CDATA[
            <a href="https://pub.dev/packages/rx_bloc" target="_blank">RxBloc</a> Library Tools for effectively creating reactive blocs. <br /><br />

            By selecting New -> RxBloc Class the plugin will create the following files <br />
            <ul>
                <li>${name}_bloc.dart The file, where the business logic resides (the contracts ( events and states) along with the BloC itself)</li>
                <li>${name}_bloc.rxb.g.dart The file, where the autogenerated boilerplate code ($CounterBloc and CounterBlocType) resides.</li>
            </ul>
        ]]>
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <actions>
        <action class="com.primeholding.rxbloc_generator_plugin.action.GenerateRxBlocAction"
                description="Generate a new RxBloc"
                id="GenerateRxBlocId"
                icon="/icons/rx_bloc.png"
                text="RxBloc Class">
            <add-to-group
                    group-id="NewGroup"
                    anchor="first"/>
        </action>
    </actions>
</idea-plugin>